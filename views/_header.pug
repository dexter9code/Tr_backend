header.header
    nav.nav.nav--tours
        a.nav__el(href=`/`) All tours
    div.header__logo
        img(src="/img/logo-white.png", alt="Naruto")
    nav.nav.nav--user 
        if user
            a.nav__el.nav__el--logout Log out 
            a.nav__el(href='#')
                img.nav__user-img(src=`img/users/${user.photo}`, alt=`photo of ${user.name}`, srcset="")
                span= user.name.split(' ')[0]
        else 
            a.nav__el(href=`/login`) Login in
            a.nav__el.nav__el--cta(href=`/singup`) singup